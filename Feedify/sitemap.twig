<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for item in items %}
        {% if item.url %}
            <url>
                <loc>{{ item.url }}</loc>
                {% if item.date %}
                    <lastmod>{{ item.date|formatDate('c') }}</lastmod>
                {% endif %}
                <changefreq>hourly</changefreq>
                <priority>1.0</priority>
            </url>
        {% endif %}
    {% endfor %}
</urlset>